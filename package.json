{
  "name": "chatterly",
  "version": "1.0.0",
  "type": "module",
  "description": "Chattio - all-in-one messaging client for Mac",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "test:unit": "node -r ./scripts/register-test-sequencer.js ./node_modules/jest/bin/jest.js --watchman=false --runInBand tests/unit",
    "test:integration": "node -r ./scripts/register-test-sequencer.js ./node_modules/jest/bin/jest.js --watchman=false --runInBand tests/integration",
    "test:e2e": "playwright test",
    "generate-icons": "electron-icon-builder --input=./public/logo3.png --output=public --flatten",
    "sync:downloads": "node ./scripts/sync-downloads.js",
    "prepack": "npm run generate-icons",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "bash scripts/build-mac.sh",
    "postdist:mac": "npm run sync:downloads",
    "dist:win": "npm run generate-icons && electron-builder --win --x64",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "lint": "eslint . --config eslint.config.js",
    "type-check": "tsc --noEmit",
    "test:coverage": "jest --coverage",
    "dev": "concurrently -k \"npm run watch:main\" \"npm run watch:renderer\" \"wait-on dist/main/index.js && electron .\"",
    "watch:main": "tsc -p tsconfig.json -w",
    "watch:renderer": "tsc -p tsconfig.renderer.json -w",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.json",
    "build:renderer": "tsc -p tsconfig.renderer.json"
  },
  "keywords": [
    "messenger",
    "whatsapp",
    "instagram",
    "linkedin",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@jest/test-sequencer": "^29.7.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/electron": "^1.4.38",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.21",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.4",
    "electron-builder": "^24.4.0",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.7.3",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "build": {
    "appId": "com.unified.messenger",
    "productName": "Chattio",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": "Jóhann Sævarsson (QD9KBHBRRZ)"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icons/icon.ico"
    },
    "dmg": {
      "title": "Chattio",
      "icon": "public/icons/icon.icns",
      "background": "public/background.png",
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "src/**/*",
      "public/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "johannvalur",
      "repo": "chattio"
    }
  },
  "dependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.1.8",
    "fs-extra": "^11.3.2",
    "lodash": "^4.17.21",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
