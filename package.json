{
  "name": "chatterly",
  "version": "1.0.0",
  "description": "Chattio - all-in-one messaging client for Mac",
  "main": "src/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "dev": "concurrently \"webpack --config webpack.renderer.config.js --watch\" \"webpack --config webpack.main.config.js --watch\" \"cross-env NODE_ENV=development electron .\"",
    "build": "npm run clean && npm run build:main && npm run build:renderer",
    "build:main": "cross-env NODE_ENV=production webpack --config webpack.main.config.js --progress",
    "build:renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.config.js --progress",
    "clean": "rimraf dist",
    "lint": "eslint src/ --ext .js,.jsx",
    "lint:fix": "eslint --fix src/ --ext .js,.jsx",
    "format": "prettier --write \"**/*.{js,jsx,json,md,html,css}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md,html,css}\"",
    "analyze": "ANALYZE=true npm run build",
    "size": "size-limit",
    "prepare": "husky",
    "test": "jest",
    "test:unit": "node -r ./scripts/register-test-sequencer.js ./node_modules/jest/bin/jest.js --watchman=false --runInBand tests/unit",
    "test:integration": "node -r ./scripts/register-test-sequencer.js ./node_modules/jest/bin/jest.js --watchman=false --runInBand tests/integration",
    "test:e2e": "playwright test",
    "test:visual": "playwright test tests/e2e/visual.spec.ts --workers=1",
    "test:visual:update": "UPDATE_SCREENSHOTS=1 playwright test tests/e2e/visual.spec.ts --workers=1",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:visual",
    "postinstall": "playwright install",
    "generate-icons": "electron-icon-builder --input=./public/logo3.png --output=public --flatten",
    "sync:downloads": "node ./scripts/sync-downloads.js",
    "prepack": "npm run generate-icons",
    "pack": "electron-builder --dir",
    "dist:mac": "npm run generate-icons && npm run build && electron-builder --mac --publish never",
    "postdist:mac": "npm run sync:downloads",
    "dist:win": "npm run generate-icons && npm run build && electron-builder --win --x64 --publish never"
  },
  "keywords": [
    "messenger",
    "whatsapp",
    "instagram",
    "linkedin",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/core": "^7.28.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.23.3",
    "@babel/runtime": "^7.23.5",
    "@electron/notarize": "^3.1.1",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^18.0.0",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "babel-jest": "^30.2.0",
    "babel-loader": "^10.0.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "chai": "^6.2.1",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "core-js": "^3.47.0",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "dotenv": "^17.2.3",
    "electron": "^25.0.0",
    "electron-builder": "^24.4.0",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.0.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.6.5",
    "husky": "^8.0.0",
    "immer": "^11.0.1",
    "jest": "^29.7.0",
    "jest-axe": "^7.0.0",
    "jest-environment-jsdom": "^28.1.3",
    "jest-environment-node": "^28.1.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.0.0",
    "mocha": "^11.7.5",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^6.1.2",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "webpack": "^5.103.0",
    "webpack-bundle-analyzer": "^5.0.0",
    "webpack-cli": "^6.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "optionalDependencies": {},
  "size-limit": [
    {
      "path": "dist/renderer.js",
      "limit": "500 KB"
    }
  ],
  "build": {
    "appId": "com.unified.messenger",
    "productName": "Chattio",
    "directories": {
      "output": "dist"
    },
    "afterPack": null,
    "afterSign": null,
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icons/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "type": "development",
      "notarize": false,
      "sign": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "src/**/*",
      "public/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "johannvalur",
      "repo": "chattio"
    },
    "electronDist": "/Users/johannvs/Downloads/chattio-a099b63ef592914d90cdeb387ed7c0bd64c18197/node_modules/electron/dist"
  },
  "dependencies": {
    "electron-updater": "^6.1.8"
  }
}
