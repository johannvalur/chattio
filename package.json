{
  "name": "chatterly",
  "version": "1.0.0",
  "description": "Chatterly - all-in-one messaging client for Mac",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --runInBand tests/unit",
    "test:integration": "jest --runInBand tests/integration",
    "test:e2e": "playwright test",
    "generate-icons": "electron-icon-builder --input=./public/logo.png --output=public --flatten",
    "prepack": "npm run generate-icons",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "npm run generate-icons && electron-builder --mac",
    "dist:win": "npm run generate-icons && electron-builder --win --x64"
  },
  "keywords": [
    "messenger",
    "whatsapp",
    "instagram",
    "linkedin",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@jest/test-sequencer": "^29.7.0",
    "@playwright/test": "^1.56.1",
    "jest-environment-jsdom": "^29.7.0",
    "http-server": "^14.1.1",
    "electron": "^25.0.0",
    "electron-builder": "^24.4.0",
    "electron-icon-builder": "^2.0.1",
    "jest": "^29.7.0",
    "jsdom": "^27.2.0"
  },
  "build": {
    "appId": "com.unified.messenger",
    "productName": "Chatterly",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icons/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icons/icon.ico"
    },
    "dmg": {
      "title": "Chatterly",
      "icon": "public/icons/icon.icns",
      "background": "public/background.png",
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "src/**/*",
      "public/**/*"
    ]
  }
}
