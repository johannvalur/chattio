{
  "name": "chatterly",
  "version": "1.0.0",
  "description": "Chattio - all-in-one messaging client for Mac",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "node -r ./scripts/register-test-sequencer.js ./node_modules/jest/bin/jest.js --watchman=false --runInBand tests/unit",
    "test:integration": "node -r ./scripts/register-test-sequencer.js ./node_modules/jest/bin/jest.js --watchman=false --runInBand tests/integration",
    "test:e2e": "playwright test",
    "test:visual": "playwright test tests/e2e/visual.spec.ts --workers=1",
    "test:visual:update": "UPDATE_SCREENSHOTS=1 playwright test tests/e2e/visual.spec.ts --workers=1",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:visual",
    "postinstall": "playwright install",
    "generate-icons": "electron-icon-builder --input=./public/logo3.png --output=public --flatten",
    "sync:downloads": "node ./scripts/sync-downloads.js",
    "prepack": "npm run generate-icons",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "npm run generate-icons && electron-builder --mac",
    "postdist:mac": "npm run sync:downloads",
    "dist:win": "npm run generate-icons && electron-builder --win --x64"
  },
  "keywords": [
    "messenger",
    "whatsapp",
    "instagram",
    "linkedin",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@playwright/test": "^1.56.1",
    "@types/node": "^18.0.0",
    "@types/pngjs": "^6.5.1",
    "babel-jest": "^30.2.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.4.0",
    "electron-icon-builder": "^2.0.1",
    "graceful-fs": "^4.2.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-haste-map": "^29.7.0",
    "jsdom": "^27.2.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "slash": "^5.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "build": {
    "appId": "com.unified.messenger",
    "productName": "Chattio",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "identity": "Jóhann Sævarsson (QD9KBHBRRZ)"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icons/icon.ico"
    },
    "dmg": {
      "title": "Chattio",
      "icon": "public/icons/icon.icns",
      "background": "public/background.png",
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "src/**/*",
      "public/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "johannvalur",
      "repo": "chattio"
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.8"
  }
}
